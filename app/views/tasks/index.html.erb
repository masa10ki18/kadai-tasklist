<h1 <span class= "glyphicon glyphicon-tasks"></span>タスク一覧</h1><br><br>
<button class="btn btn-info" type="button">
  現在のタスク数 <span class="badge"><%= Task.count %></span>
</button>
  
<% if @tasks.any? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to '新規タスクの投稿' ,new_task_path, class: "btn btn-success" %>
