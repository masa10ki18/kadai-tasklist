<% if logged_in? %>
  <p>ユーザ: <%= current_user.name %>がログイン中</p>
  <h1><span class= "glyphicon glyphicon-tasks"></span>タスク一覧</h1><br><br>

  
<% if @tasks.any? %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>id</th>
        <th>ステータス</th>
        <th>タスク</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= link_to task.id, task %></td>
          <td><%= task.status %></td>
          <td><%= task.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to '新規タスクの投稿' ,new_task_path, class: "btn btn-success" %>
  
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Microposts</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>